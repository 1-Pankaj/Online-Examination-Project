<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sign_up_bg"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up here :"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#373737"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.2"
        android:id="@+id/textGetStarted"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:cornerRadius="50dp"
        app:iconTint="@color/black"
        android:id="@+id/back"
        app:iconSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/textGetStarted"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:backgroundTint="#0000FFFF"
        android:stateListAnimator="@null"/>



    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/textGetStarted"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:ems="10"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.05"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_person_icon"
        android:drawablePadding="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/fullname"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/fullname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="textPersonName"
        android:hint="Email"
        android:ems="10"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.05"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawablePadding="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/email"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="phone"
        android:hint="Phone"
        android:ems="10"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.06"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_phone_icon"
        android:drawablePadding="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/phone"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.08"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawablePadding="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/password"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:ems="10"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.10"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawablePadding="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:id="@+id/ConfirmPassword"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        app:cornerRadius="30dp"
        android:backgroundTint="#090D63"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/ConfirmPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:text="Create"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp"
        android:id="@+id/create"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create"
        android:text="Already have an account?"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        android:id="@+id/textAlreadyHave"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Sign In"
        android:id="@+id/login"
        android:textColor="#090D63"
        app:layout_constraintLeft_toRightOf="@id/textAlreadyHave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>