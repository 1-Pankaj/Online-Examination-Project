<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recover your account here"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#464646"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/recoverText"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your mobile number and we'll send an OTP to recover your account"
        app:layout_constraintTop_toBottomOf="@id/recoverText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.035"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/secondText"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/secondText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_phone_icon"
        android:drawablePadding="20dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/mobileNumber"
        android:inputType="phone"
        app:layout_constraintVertical_bias="0.1"
        android:hint="Mobile number"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/mobileNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_phone_icon"
        android:drawablePadding="20dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/otp"
        android:hint="Enter OTP"
        app:layout_constraintVertical_bias="0"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/mycolor"
        app:layout_constraintTop_toBottomOf="@id/otp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:text="Send OTP"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="21sp"
        android:id="@+id/sendOTP"
        app:cornerRadius="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/mycolor"
        app:layout_constraintTop_toBottomOf="@id/sendOTP"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:visibility="gone"
        android:text="Verify OTP"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="21sp"
        android:id="@+id/verifyOTP"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/mobileNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_phone_icon"
        android:drawablePadding="20dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/newPass"
        android:hint="Enter new Password"
        app:layout_constraintVertical_bias="0"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/mycolor"
        app:layout_constraintTop_toBottomOf="@id/newPass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:text="Confirm"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="21sp"
        android:id="@+id/confirm"
        app:cornerRadius="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:textSize="17sp"
        android:textColor="@color/mycolor"
        app:layout_constraintTop_toBottomOf="@id/verifyOTP"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/loginText"/>

</androidx.constraintlayout.widget.ConstraintLayout>