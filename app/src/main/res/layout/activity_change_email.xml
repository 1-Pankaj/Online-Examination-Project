<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changeEmail">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:text="Change your email here"
      android:textColor="#2D2D2D"
      app:layout_constraintVertical_bias="0.1"
      android:textStyle="bold"
      android:textSize="25sp"
      android:textAlignment="center"
      android:id="@+id/changeEmailText"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Enter a new email below which you want to use in this application"
      android:textAlignment="center"
      android:textSize="17sp"
      android:padding="5dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/changeEmailText"
      app:layout_constraintRight_toRightOf="parent"
      android:paddingStart="30dp"
      android:paddingEnd="30dp"
      app:layout_constraintVertical_bias="0.025"
      android:textStyle="bold"
      android:id="@+id/secondText"/>
  <EditText
      android:layout_width="300dp"
      android:layout_height="80dp"
      android:background="@drawable/custom_input"
      android:drawableStart="@drawable/custom_email_icon"
      android:ems="10"
      app:layout_constraintTop_toBottomOf="@id/secondText"
      android:id="@+id/emailText"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_bias="0.1"
      android:drawablePadding="20dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:hint="Previous Email"
      android:textSize="14sp"
      android:inputType="textEmailAddress"/>
  <com.google.android.material.button.MaterialButton
      android:layout_width="250dp"
      android:layout_height="80dp"
      app:layout_constraintTop_toBottomOf="@id/newEmailText"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_bias="0.1"
      android:id="@+id/btnPrevious"
      android:text="Check"
      android:textAlignment="center"
      android:textSize="21sp"
      android:textAllCaps="false"
      app:cornerRadius="5dp"
      android:textStyle="bold"
      android:backgroundTint="@color/mycolor"/>
  <EditText
      android:layout_width="300dp"
      android:layout_height="80dp"
      android:visibility="gone"
      android:background="@drawable/custom_input"
      android:drawableStart="@drawable/custom_email_icon"
      android:ems="10"
      app:layout_constraintTop_toBottomOf="@id/emailText"
      android:id="@+id/newEmailText"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_bias="0"
      android:drawablePadding="20dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:hint="New Email"
      android:textSize="14sp"
      android:inputType="textEmailAddress"/>
  <com.google.android.material.button.MaterialButton
      android:layout_width="250dp"
      android:layout_height="80dp"
      app:layout_constraintTop_toBottomOf="@id/btnPrevious"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:visibility="gone"
      app:cornerRadius="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintVertical_bias="0"
      android:id="@+id/btnChange"
      android:text="Change"
      android:textAlignment="center"
      android:textSize="21sp"
      android:textAllCaps="false"
      android:textStyle="bold"
      android:backgroundTint="@color/mycolor"/>
  </androidx.constraintlayout.widget.ConstraintLayout>